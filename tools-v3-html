            const toolGrid = document.getElementById('tool-grid');
            const toolProfile = document.getElementById('tool-profile');
            const selectedToolName = document.getElementById('selected-tool-name');
            const ctx = document.getElementById('toolRadarChart').getContext('2d');
            let radarChart;

            const chartLabels = ['Supplier Adoption', 'Cost-Effectiveness', 'Reduction Features', 'Ease of Use'];
            const chartColors = {
                gpt: 'rgba(13, 148, 136, 0.4)', // teal-600
                sweep: 'rgba(8, 145, 178, 0.4)', // cyan-600
                greenly: 'rgba(74, 222, 128, 0.4)', // green-400
                scss: 'rgba(245, 158, 11, 0.4)', // amber-500
                normative: 'rgba(167, 139, 250, 0.4)', // violet-400
                carbonchain: 'rgba(251, 113, 133, 0.4)', // rose-400
                axiom: 'rgba(239, 68, 68, 0.4)', // red-500
                pledge: 'rgba(96, 165, 250, 0.4)' // blue-400
            };
             const chartBorderColors = {
                gpt: 'rgb(13, 148, 136)',
                sweep: 'rgb(8, 145, 178)',
                greenly: 'rgb(74, 222, 128)',
                scss: 'rgb(245, 158, 11)',
                normative: 'rgb(167, 139, 250)',
                carbonchain: 'rgb(251, 113, 133)',
                axiom: 'rgb(239, 68, 68)',
                pledge: 'rgb(96, 165, 250)'
            };

            function createRadarChart() {
                const datasets = toolData.map(tool => ({
                    label: tool.name,
                    data: [tool.scores.adoption, tool.scores.cost, tool.scores.features, tool.scores.usability],
                    backgroundColor: chartColors[tool.id],
                    borderColor: chartBorderColors[tool.id],
                    borderWidth: 2.5,
                    pointBackgroundColor: chartBorderColors[tool.id],
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: chartBorderColors[tool.id],
                    pointRadius: 5,
                    pointBorderWidth: 2,
                    hidden: true
                }));

                if (radarChart) radarChart.destroy();

                radarChart = new Chart(ctx, {
                    type: 'radar',
                    data: { labels: chartLabels, datasets: datasets },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            r: {
                                angleLines: { color: 'rgba(0, 0, 0, 0.05)' },
                                grid: { color: 'rgba(0, 0, 0, 0.08)' },
                                pointLabels: { font: { size: 13, weight: '600' }, color: '#44403c' },
                                ticks: {
                                    beginAtZero: true, min: 0, max: 5, stepSize: 1,
                                    backdropColor: 'rgba(255, 255, 255, 0.6)',
                                    color: '#78716c'
                                }
                            }
                        },
                        plugins: { legend: { display: false } }
                    }
                });
            }

            function displayToolProfile(toolId) {
                const tool = toolData.find(t => t.id === toolId);
                if (!tool) return;

                selectedToolName.textContent = tool.name;

                const renderVerdictList = (items, colorClass) => items.map(item => `
                    <li class="flex items-start">
                        <span class="${colorClass} mr-3 mt-1 flex-shrink-0 text-lg leading-none">▪</span>
                        <span>${item}</span>
                    </li>`).join('');

                toolProfile.innerHTML = `
                    <div class="flex flex-wrap gap-2 border-b border-stone-200 mb-4 pb-4">
                        <button data-tab="overview" class="detail-tab flex-grow sm:flex-grow-0 py-2 px-4 text-stone-600 font-medium">Overview</button>
                        <button data-tab="engagement" class="detail-tab flex-grow sm:flex-grow-0 py-2 px-4 text-stone-600 font-medium">Engagement</button>
                        <button data-tab="verdict" class="detail-tab flex-grow sm:flex-grow-0 py-2 px-4 text-stone-600 font-medium">Verdict</button>
                    </div>
                    <div id="tab-content" class="text-stone-700 space-y-4"></div>
                `;
                
                const tabContentContainer = document.getElementById('tab-content');

                const tabContents = {
                    overview: `
                        <p>${tool.details.overview}</p>
                        <div class="mt-4 pt-4 border-t border-stone-200/80 bg-slate-50 p-4 rounded-lg">
                            <h4 class="font-bold text-stone-800 mb-2">Strategic Role vs. NetPositive</h4>
                            <p class="text-sm">${tool.details.role}</p>
                        </div>`,
                    engagement: `
                        <div>
                            <h4 class="font-bold text-stone-800 mb-2">Supplier Engagement Mechanism</h4>
                            <p>${tool.details.engagement}</p>
                        </div>
                        <div class="mt-4 pt-4 border-t border-stone-200/80">
                            <h4 class="font-bold text-stone-800 mb-2">Reduction Features</h4>
                            <p>${tool.details.reduction}</p>
                        </div>
                        <div class="mt-4 pt-4 border-t border-stone-200/80">
                            <h4 class="font-bold text-stone-800 mb-2">Pricing Model</h4>
                            <p>${tool.details.pricing}</p>
                        </div>`,
                    verdict: `
                        <div>
                            <h4 class="font-bold text-teal-600 mb-2">Pros</h4>
                            <ul class="space-y-2">${renderVerdictList(tool.details.verdict.pros, 'text-teal-500')}</ul>
                        </div>
                        <div class="mt-4 pt-4 border-t border-stone-200/80">
                            <h4 class="font-bold text-amber-600 mb-2">Cons</h4>
                            <ul class="space-y-2">${renderVerdictList(tool.details.verdict.cons, 'text-amber-500')}</ul>
                        </div>`
                };

                const setActiveTab = (tabName) => {
                    tabContentContainer.innerHTML = tabContents[tabName];
                    document.querySelectorAll('.detail-tab').forEach(tab => {
                        tab.classList.toggle('active', tab.dataset.tab === tabName);
                    });
                };
                
                document.querySelectorAll('.detail-tab').forEach(tab => {
                    tab.addEventListener('click', () => setActiveTab(tab.dataset.tab));
                });

                setActiveTab('overview');
            }

            function updateActiveCard(toolId) {
                document.querySelectorAll('.tool-card').forEach(card => {
                    card.classList.toggle('active', card.dataset.toolId === toolId);
                });
            }
            
            function updateChartVisibility(toolId) {
                radarChart.data.datasets.forEach(dataset => {
                    const currentTool = toolData.find(t => t.name === dataset.label);
                    dataset.hidden = currentTool.id !== toolId;
                });
                radarChart.update();
            }

            function handleToolSelection(toolId) {
                displayToolProfile(toolId);
                updateActiveCard(toolId);
                updateChartVisibility(toolId);
                document.getElementById('deep-dive').scrollIntoView({ behavior: 'smooth', block: 'start' });
            }

            // Populate tool grid
            toolData.forEach(tool => {
                const card = document.createElement('div');
                card.className = `tool-card bg-white p-5 rounded-xl border-2 border-transparent shadow-sm cursor-pointer relative`;
                card.dataset.toolId = tool.id;
                card.innerHTML = `
                    ${tool.recommended ? '<span class="absolute top-0 right-0 -mt-2 -mr-2 flex h-6 w-6"><span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-teal-400 opacity-75"></span><span class="relative inline-flex rounded-full h-6 w-6 bg-teal-500 text-white items-center justify-center text-xs font-bold">★</span></span>' : ''}
                    <div class="flex items-center mb-2">
                        <span class="text-xl mr-3">${tool.fitIcon}</span>
                        <div>
                            <h3 class="font-bold text-lg text-stone-800 leading-tight">${tool.name}</h3>
                            <p class="text-stone-500 text-xs font-medium">${tool.fit}</p>
                        </div>
                    </div>
                `;
                card.addEventListener('click', () => handleToolSelection(tool.id));
                toolGrid.appendChild(card);
            });

            // Initial state
            const initialToolId = 'gpt';
            createRadarChart();
            handleToolSelection(initialToolId);
        });
    </script>
</body>
</html>
